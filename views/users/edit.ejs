<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 id="h1-edit-user-form">Edit Profile</h1>
        <form action="/users/<%= user._id %>/?_method=PUT" method="post" enctype="multipart/form-data" style="width: 40%" class="thumbnail" id="edit-user-form">
            <div class="form-group">
                <label>First Name</label>
                <input class="form-control" type="text"  value="<%= user.firstName %>" name="user[firstName]" >
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input class="form-control" type="text"  value="<%= user.lastName %>" name="user[lastName]">
            </div>
            <div class="form-group">
                <label>Username*</label>
                <input class="form-control" type="text"  value="<%= user.username %>" name="user[username]" required>
            </div>
            <div class="form-group">
                <label>Email*</label>
                <input class="form-control" type="email"  value="<%= user.email %>" name="user[email]" required>
            </div>
            <div class="form-group">
                <label>Bio</label>
               <textarea class="form-control" type="text" value="<%= user.bio %>" name="user[bio]" maxlength="280"><%= user.bio %></textarea>
            </div>
            <div class="form-group">
                <label for="avatar">Avatar</label>
                <input  type="file" name="avatar" id="avatar" accept="image/*">
            </div>
            <button class="btn btn-primary">Submit</button>
        </form>
        <br>
    </div>
</div>
<% include ../partials/footer %>